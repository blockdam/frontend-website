<!DOCTYPE html>
<html>

{{> head}}

<body id="blog">

{{> header }}

<main id="main">

    <article>

        <div class="container-large">
            <div class="post-header">

                <div class="post-intro--title">
                    {{#each body.taxonomies.categories as |cat|}}
                        <span class="post-intro--category taxonomy-tab">{{cat.name}}</span>
                    {{/each}}
                    <h2 class="">{{{body.title.rendered}}}</h2>
                    <div class="date">Last updated: {{formatDate body.modified 'D MMMM YYYY'}}</div>

                </div>

            </div>
        </div>

        <div class="post-intro container-small">
            {{{body.content.rendered}}}
        </div>

        <section class="container-small">
            <div id="content-container"></div>

        </section>



        </div>

    </article>

</main>

<aside>

</aside>

<section id="related-posts">

    <div class="container-large">
        <!--<h2>Lees ook</h2>-->


    </div>

</section>

{{> footer }}

</body>

</html>
