<!DOCTYPE html>
<html>

{{> head}}

<body id="dao">

{{> header }}

<main id="main">

    <article>
        <div class="container-large">
            <div class="post-header">
                <div class="post-intro--title">
                    {{#each body.taxonomies.categories as |cat|}}
                        <span class="post-intro--category taxonomy-tab">{{cat.name}}</span>
                    {{/each}}
                    <h2 class="">{{{body.title.rendered}}}</h2>
                    <div class="date">Last updated: {{formatDate body.modified 'D MMMM YYYY | HH:mm'}}</div>
                </div>
            </div>
        </div>

        <div class="post-intro container-small">
            {{{body.content.rendered}}}
        </div>

        {{> sections }}

        <section class="container-small">
            <div id="content-container"></div>
        </section>
    </article>

</main>

<aside>

    <div id="minter">
        <h3>Minter</h3>
        <div class="period"></div>
        <div class="budget"></div>
        <form>
            <div><label>to:</label><input id="address" required /></div>
            <div><label>amount:</label><input type="number" required /></div>
            <button>Mint</button>
        </form>
    </div>

    <div id="voter">
        <h3>Voter</h3>
        <div class="amount"></div>
        <div>Vouchers</div>
    </div>

</aside>

<section id="related-posts">

    <div class="container-large">
        <!--<h2>Lees ook</h2>-->


    </div>

</section>

{{> footer }}

</body>

</html>
