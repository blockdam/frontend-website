<!DOCTYPE html>
<html>

{{> head}}

<body id="blog">

    {{> header }}

    <main id="main">

        <article>

            <div class="container-large">
                <div class="post-header">

                    <div class="post-intro--stats">
                        <div class="post-intro--stats--votes--up">{{>icon-thumbs-up}}<span>{{body.interaction.appreciation.positive_count}}</span></div>
                        <div class="post-intro--stats--votes--down">{{>icon-thumbs-up}}<span>{{body.interaction.appreciation.negative_count}}</span></div>
                        <div class="post-intro--stats--commentcount">{{> icon-comments }}{{body.interaction.comment_count}}</div>
                    </div>

                    <div class="post-intro--title">
                        {{#each body.taxonomies.categories as |cat|}}
                            <span class="post-intro--category taxonomy-tab">{{cat.name}}</span>
                        {{/each}}
                        <h2 class="">{{{body.title.rendered}}}</h2>
                        {{#if body.source.url }}
                            <div class="source"><a href="{{body.source.url}}">Originally published on {{body.source.description}}</a></div>
                        {{/if}}
                        <div class="date">{{formatDate body.date 'D MMMM YYYY'}}</div>



                    </div>

                </div>
            </div>

            <div class="post-intro container-small">
                {{{body.content.rendered}}}
            </div>

            {{> sections }}




{{> comment-section}}
     


        </article>

    </main>

    <aside>
        {{> author-post-top }}

        {{> donation-button }}
    </aside>

    <section id="related-posts">

        <div class="container-large">
            <!--<h2>Lees ook</h2>-->


        </div>

    </section>

    {{> footer }}

</body>

</html>
