<!DOCTYPE html>
<html>

{{> head}}

<body id="blog">

    {{> header }}

    <main id="main">

        <article>

            <div class="container-large">
                <div class="post-header">

                    {{> author-post-top }}

                    <h2 class="">{{{body.title.rendered}}}</h2>
                    <div class="date">{{formatDate body.date 'DD-MM-YYYY'}}</div>
                </div>
            </div>

            <div class="post-intro container-small">
                {{{body.content.rendered}}}
            </div>

            {{> sections }}

        </article>

    </main>

    <section id="related-posts">

        <div class="container-large">
            <!--<h2>Lees ook</h2>-->

            <!--{{#each body.related_posts as |post|}}-->
                <!--{{>block item=post body=../body}}-->
            <!--{{/each}}-->
        </div>

    </section>

    {{> footer }}

</body>

</html>
