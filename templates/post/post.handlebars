<!DOCTYPE html>
<html>

{{> head}}

<body id="blog">

    {{> header }}

    <main id="main">

        <article>

            <div class="container-large">
                <div class="post-header">
                    <div class="date">{{formatDate body.date 'DD/MM/YYYY'}}</div>
                    <h2 class="">{{{body.title}}}</h2>
                </div>
            </div>

            <div class="post-intro container-small">
                {{{body.content}}}
            </div>

            {{> sections }}

        </article>

    </main>

    {{> footer }}

</body>

</html>
