<!DOCTYPE html>
<html>
{{> head}}


<body id="homepage">

{{> header }}

<main>

    <div class="container-medium">

        <section id="section-magazine" class="section-half">

            <a href="{{body.posts.[0].url}}" id="featured-blog" class="block blog">

                <h2>{{body.posts.[0].title.rendered}}</h2>
                <span class="author">{{body.posts.[0].author.first_name}} {{body.posts.[0].author.last_name}}</span>
                <span class="date">{{formatDate body.posts.[0].date 'D MMMM YYYY'}}</span>

                {{> icon-energy }}
            </a>

            <a href="{{body.activities.[0].url}}" id="coming-event" class="block activity">

                <span class="author">Next meetup: {{formatDate body.activities.[0].calendar.startDate 'DD MMMM'}}</span>
                <h2>{{body.activities.[0].title}}</h2>
                <div class="content">{{{body.activities.[0].content}}}</div>

                {{> icon-energy }}

            </a>

            <div class="flex-row">

                <div id="blog-list">

                    {{#each (offset body.posts 1) as |post| }}

                            {{> block item=post }}

                    {{/each}}

                </div>


                <div id="curated-list">

                    <h2>{{body.links.title.rendered}}</h2>

                    {{#each body.links.recommendations as | link | }}

                        <div class="recommendation">

                            <div class="recommendation--tag">
                                <span>{{ indexBump @index }}</span>. {{link.tag}}
                            </div>
                            <div class="recommendation--title">
                                {{link.title}}
                            </div>
                            <div class="recommendation--subtitle">
                                {{link.subtitle}}
                            </div>

                        </div>


                    {{/each}}

                </div>

            </div>

        </section>

        <section id="section-community" class="section-half">

            <div id="dao-block">
                dao dashboard
            </div>

            <div id="community-block">
                community

                {{#each body.discussion as |blog|}}

                    <article class="{{#ifEquals @index 0}}active{{/ifEquals}}">

                        <div class="discussion-comments">
                            <span class="blog-comment-count smallerfont">Reacties op dit artikel ({{blog.interaction.comment_count}})</span>
                            <div class="scrolltainer">
                                {{#each blog.interaction.nested_comments as |thread| }}
                                    {{#each thread as |comment| }}
                                        <div class="comment {{#ifEquals @index 0}}threadhead{{/ifEquals}}">
                                            <h4>{{comment.name}} <span class='datetime smallerfont'> ({{formatDate comment.date 'comment_small'}})</span></h4>

                                            <div class="comment-text">
                                                {{{ excerpt comment.content}}}
                                            </div>
                                            <svg class="card-extension" width="46px" height="29px" viewBox="0 0 46 29" version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink">
                                                <polygon id="Rectangle-8" points="0 27.265625 45.1523437 0 45.1523438 28.1542719"></polygon>
                                            </svg>
                                        </div>
                                    {{/each}}
                                {{/each}}
                            </div>
                        </div>

                    </article>
                {{/each}}

            </div>


        </section>

    </div>

</main>


{{json body.activities.[0]}}


{{> footer }}
</body>
</html>
