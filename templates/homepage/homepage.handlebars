<!DOCTYPE html>
<html>
{{> head}}


<body id="homepage">

{{> header }}

<main>

    <div class="container-medium">

        <section id="section-magazine" class="section-half">

            <a href="/nieuws/2018/a-vision-for-the-blockdam-dao" id="featured-blog" class="block">
                <!--featured blog-->

                <h2>A vision for the BlockDam DAO!</h2>
                <span class="author">Bert Bosman | 12-10-2018</span>
                <span class="date"></span>
            </a>

            <div id="recent-comments" class="block">
                recent comments
            </div>

            <div class="flex-row">

                <div id="blog-list">

                    <div class="block">
                        blog 2
                    </div>

                    <div class="block">
                        blog 3
                    </div>

                    <div class="block">
                        blog 4
                    </div>

                    <div class="block">
                        blog 5
                    </div>

                </div>


                <div id="curated-list">

                    <h2>{{body.links.title.rendered}}</h2>

                    {{#each body.links.recommendations as | link | }}

                        <div class="recommendation">

                            <div class="recommendation--tag">
                                <span>{{@index}}</span>. {{link.tag}}
                            </div>
                            <div class="recommendation--title">
                                {{link.title}}
                            </div>
                            <div class="recommendation--subtitle">
                                {{link.subtitle}}
                            </div>

                        </div>


                    {{/each}}

                </div>

            </div>

        </section>

        <section id="section-community" class="section-half">

            <div id="dao-block">
                dao dashboard
            </div>

            <div id="community-block">
                community
            </div>


        </section>

    </div>

</main>


{{> footer }}
</body>
</html>
