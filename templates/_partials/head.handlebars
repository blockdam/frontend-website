<head>
    <base href="/">
    <title>BLOCKDAM - {{body.title.rendered}}</title>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="{{or (excerpt body.content.rendered) ''}}">

    <meta property="og:url"content="{{or body.url 'http://blockdam.publikaan.nl/'}}" />
    <meta property="og:title"content="{{or body.title.rendered 'BLOCKDAM'}}" />
    <meta property="og:image"content="https://ucarecdn.com/{{or body.main_image.external_id body.homeContent.main_image.external_id}}/-/resize/600x/{{or body.main_image.filename body.homeContent.main_image.filename}}" />
    <meta property="og:description" content="{{excerpt body.content}}" />
    <meta property="og:type" content="article" />

    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:site" content="@blockdam">
    <meta name="twitter:creator" content="@blockdam">
    <meta name="twitter:title" content="{{or body.title.rendered 'BLOCKDAM'}}">
    <meta name="twitter:description" content="{{or (excerpt body.content.rendered) (excerpt body.page.content.rendered)}}">
    <meta name="twitter:image" content="https://ucarecdn.com/{{or body.main_image.external_id body.homeContent.main_image.external_id}}/-/resize/600x/{{or body.main_image.filename body.homeContent.main_image.filename}}">

    {{> head-scripts }}

</head>
