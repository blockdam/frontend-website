<!DOCTYPE html>
<html>

{{> head}}

<body id="blog">

{{> header }}

<main id="main">

    <article>

        <div class="container-large">
            <div class="post-header">

                <div class="post-intro--stats">
                    <div class="event-date">
                        <span class="date">{{formatDate body.calendar.startDate.date 'DD'}}</span>
                        <span class="date">{{formatDate body.calendar.startDate.date 'MMM'}}</span>
                    </div>

                    <div class="post-intro--stats--votes--up">{{>icon-thumbs-up}}<span>{{body.interaction.appreciation.positive_count}}</span></div>
                    <div class="post-intro--stats--votes--down">{{>icon-thumbs-up}}<span>{{body.interaction.appreciation.negative_count}}</span></div>
                    <div class="post-intro--stats--commentcount">{{> icon-comments }}{{body.interaction.comment_count}}</div>
                </div>

                <div class="post-intro--title">
                    <h2 class="">{{{body.title }}}</h2>
                    <div class="date">Last updated at {{formatDate body.modified 'D MMMM YYYY'}}</div>

                </div>

            </div>
        </div>

        <div class="post-intro container-small">

            {{{body.content }}}
        </div>

        {{> sections }}


        <div class="event-info" class="container-small">

            <h3>Locatie:</h3>

            {{ body.sessions.[0].location.name }}<br/>
            {{ body.sessions.[0].location.submitted_address }}


            <h3>Tijd:</h3>

            {{ formatDate body.sessions.[0].calendar.startDate.date 'DD MMMM'}}<br/>
            {{ body.sessions.[0].date.start_time }} - {{ body.sessions.[0].date.end_time }}

        </div>


            {{> comment-section}}


    </article>

</main>


<section id="related-posts">

    <div class="container-large">
        <!--<h2>Lees ook</h2>-->


    </div>

</section>

{{> footer }}

</body>

</html>
